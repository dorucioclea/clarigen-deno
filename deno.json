{
  "fmt": {
    "options": {
      "singleQuote": true
    },
    "files": {
      "include": ["src/", "test_pkg/", "artifacts/", "tests/", "scripts/", "cli.ts"]
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "test_pkg/", "artifacts/", "tests/", "scripts/", "cli.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "no-empty"],
      "include": ["eqeqeq", "no-const-assign", "no-throw-literal"]
    }
  }
}